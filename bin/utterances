#!/usr/bin/env node

var fs = require('fs');
var path = require('path');
var utterances = require('alexa-utterances');

var slots = {
  query: 'LITERAL'
};

var dictionary = {
  superheroes: [
    'Batman',
    'Blackcat',
    'Captain America',
    'Cyclops',
    'Elektra',
    'Harley Quin',
    'Hawkeye',
    'Iron Man',
    'Jean Grey',
    'Kingpin',
    'Luke Cage',
    'Magneto',
    'Mystique',
    'Thor',
    'Spider-woman',
    'Phoenix',
    'Professor X',
    'Spider-man',
    'The Invisible Woman',
    'The Joker',
    'The Punisher',
    'The Thing',
    'Wolverine'
  ]
};

var templates = fs.readFileSync(path.join(__dirname, '..', 'SAMPLES'), 'UTF-8').split('\n');

var data = templates.reduce((state, template) => state.concat(utterances(template, slots, dictionary)), []);

fs.writeFileSync(path.join(__dirname, '..', 'build', 'UTTERANCES'), data.join('\n'));
